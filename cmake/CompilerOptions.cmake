if(CMAKE_BUILD_TYPE STREQUAL "Debug")
    if(CMAKE_C_COMPILER_ID MATCHES "Clang")
        set(CMAKE_CPP_FLAGS "${CMAKE_CPP_FLAGS} -g")
    elseif(CMAKE_C_COMPILER_ID MATCHES "GNU")
        set(CMAKE_CPP_FLAGS "${CMAKE_CPP_FLAGS} -g")
    elseif(CMAKE_C_COMPILER_ID MATCHES "MSVC")
    endif()
endif()

if(CMAKE_BUILD_TYPE STREQUAL "RelWithDebInfo")
    if(CMAKE_C_COMPILER_ID MATCHES "Clang")
        set(CMAKE_CPP_FLAGS "${CMAKE_CPP_FLAGS} -g")
    elseif(CMAKE_C_COMPILER_ID MATCHES "GNU")
        set(CMAKE_CPP_FLAGS "${CMAKE_CPP_FLAGS} -g")
    elseif(CMAKE_C_COMPILER_ID MATCHES "MSVC")
    endif()
endif()

if(CMAKE_BUILD_TYPE STREQUAL "Release" OR CMAKE_BUILD_TYPE STREQUAL "RelWithDebugInfo")
    if(CMAKE_C_COMPILER_ID MATCHES "Clang")
        set(CMAKE_CPP_FLAGS "${CMAKE_CPP_FLAGS} -O2")
    elseif(CMAKE_C_COMPILER_ID MATCHES "GNU")
        set(CMAKE_CPP_FLAGS "${CMAKE_CPP_FLAGS} -O2")
    elseif(CMAKE_C_COMPILER_ID MATCHES "MSVC")
    endif()
endif()

if (WIN32)
    add_definitions(-D_CRT_SECURE_NO_WARNINGS=1)
    set(CMAKE_CPP_FLAGS "${CMAKE_CPP_FLAGS} /W4")
    set(CMAKE_CPP_FLAGS "${CMAKE_CPP_FLAGS} /MP") # Enable parallel build
    set(CMAKE_CPP_FLAGS "/std:c++latest")
endif (WIN32)
